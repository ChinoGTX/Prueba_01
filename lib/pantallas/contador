import 'package:flutter/material.dart';

class contador extends StatefulWidget {
  const contador({super.key});

  @override
  State<contador> createState() => _contadorState();
}

class _contadorState extends State<contador> {
  int clickcontador = 0; 

  void _decrementCounter() {
    setState(() {
      if (clickcontador > 0) {
        clickcontador--; 
      }
    });
  }

  
  void _resetCounter() {
    setState(() {
      clickcontador = 0; 
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Contador'), 
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text('Cantidad de Clicks'), // Texto descriptivo
            Text(
              '$clickcontador',
              style: TextStyle(fontSize: 150, fontWeight: FontWeight.w100),
            ), 
          ],
        ),
      ),
      floatingActionButton: Column(
        mainAxisAlignment: MainAxisAlignment.end,
        children: [
          FloatingActionButton(
            onPressed: () {
              setState(() {
                clickcontador++;
              });
            },
            child: Icon(Icons.plus_one),
          ),
          SizedBox(height: 10), //es para poner un espacion entre botones
          // Botón para disminuir el contador
          FloatingActionButton(
            onPressed: _decrementCounter,
            child: Icon(Icons.exposure_minus_1),
          ),
          SizedBox(height: 10), ////es para poner un espacion entre botones
          // Botón para reiniciar el contador
          FloatingActionButton(
            onPressed: _resetCounter,
            child: Icon(Icons.refresh),
          ),
        ],
      ),
    );
  }
}